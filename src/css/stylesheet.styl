html
    box-sizing border-box

*, *:before, *:after
    box-sizing inherit

body
    background-color #192837
    font-family "Titillium Web", Arial, sans-serif
    font-size 20px
    margin 0

.container
    position fixed
    top 40%
    left 50%
    display flex
    flex-direction column
    -webkit-transform translate(-50%, -50%)
    
#logo
    margin auto
    font-size 5rem
    -webkit-transition: all 0.5s ease-in-out;
    -moz-transition: all 0.5s ease-in-out;
    -ms-transition: all 0.5s ease-in-out;
    -o-transition: all 0.5s ease-in-out;
    transition: all 0.5s ease-in-out;

.input__container
    display flex
    width 400px

input
    background-color #126077
    border 1px solid #3F7F93
    color #A6CAE6
    font-family "Titillium Web"
    font-size 20px
    line-height 43px
    padding 0 0.75em
    width 400px
    -webkit-transition all 0.35s ease-in

textarea
    background-color #070F24
    border 1px solid #122435
    color #606B88
    padding 0.5em
    width 100%
    -webkit-transition all 0.35s ease-in

input:active, input:focus, textarea:active, textarea:focus
    outline 1px solid #48788B

.btn
    background-color #126178
    border 1px solid #549EAF
    color #549EAF
    cursor pointer
    display inline-block
    font-family "Titillium Web"
    font-size 20px
    line-height 43px
    padding 0 0.75em
    text-align center
    text-transform uppercase
    -webkit-transition all 0.35s ease-in
    &:hover
        background-color #1888A9
        color #183035

.debug
    bottom 0
    position fixed
    right 0

.debug__content
    font-size 14px
    max-height 0
    overflow hidden
    -webkit-transition all 0.35s ease-in
    &.is-active
        display block

.debug__btn
    width 100%

.spoken-response
    max-height 0
    overflow hidden
    -webkit-transition all 0.35s ease-in
    &.is-active
        max-height 400px

.spoken-response__text
    background-color #040E23
    color #7584A2
    padding 1em
    overflow hidden
    resize none
    height 40rem
    width 400px